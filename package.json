{
  "name": "orgcolor",
  "displayName": "Org color indicator",
  "description": "Sets colors for each Salesforce org that you work with, updating it automatically when you switch orgs.",
  "version": "1.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gonzalovsilva/orgColor"
  },
  "publisher": "gonzalovsilva",
  "author": {
    "name": "Gon√ßalo Silva"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "salesforce",
    "org",
    "color",
    "indicator",
    "sfdx",
    "cli"
  ],
  "activationEvents": [
    "workspaceContains:.sfdx/sfdx-config.json"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "OrgColor",
      "properties": {
        "orgcolor.setColorBars": {
          "order": 0,
          "type": "object",
          "scope": "resource",
          "markdownDescription": "Where do you want to set the color ?",
          "properties": {
            "statusBar": {
              "type": "string",
              "enum": ["Org Color", "Project Color", "Disable"],
              "default": "Org Color"
            },
            "activityBar": {
              "type": "string",
              "enum": ["Org Color", "Project Color", "Disable"],
              "default": "Org Color"
            },
            "titleBar": {
              "type": "string",
              "enum": ["Org Color", "Project Color", "Disable"],
              "default": "Org Color"
            }
          },
          "default": {
            "statusBar": "Org Color",
            "activityBar": "Org Color",
            "titleBar": "Org Color"
          },
          "additionalProperties": false,
          "required": ["statusBar", "activityBar", "titleBar"]
        },
        "orgcolor.defaultOrgColors": {
          "type": "object",
          "scope": "resource",
          "properties": {
            "trailhead Org": {
              "type": "string",
              "description": "Color for Trailhead playground orgs",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "default": "#99AEBB"
            },
            "scratch Org": {
              "type": "string",
              "description": "Color for Scratch orgs",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "default": "#73D06F"
            },
            "dev Org": {
              "type": "string",
              "description": "Color for Develloper orgs",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "default": "#574FB8"
            },
            "uat Org": {
              "type": "string",
              "description": "Color for User Acceptance Testing orgs",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "default": "#FFA01B"
            },
            "preprod Org": {
              "type": "string",
              "description": "Color for Pre-production orgs",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "default": "#E8476A"
            },
            "prod Org": {
              "type": "string",
              "description": "Color for Production orgs",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "default": "#B52B0B"
            }
          },
          "default": {
            "trailhead Org": "#99AEBB",
            "scratch Org": "#73D06F",
            "dev Org": "#574FB8",
            "uat Org": "#FFA01B",
            "preprod Org": "#E8476A",
            "prod Org": "#B52B0B"
          },
          "additionalProperties": {
            "type": "string",
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          }
        },
        "orgcolor.projects": {
          "type": "object",
          "scope": "resource",
          "additionalProperties": {
            "type": "string",
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          }
        }
      }
    },
    "commands": [
      {
        "command": "orgcolor.setOrgColor",
        "title": "Set Org Color",
        "shortTitle": "Set Org Color",
        "category": "Orgcolor"
      },
      {
        "command": "orgcolor.updateOrgColor",
        "title": "Update Org Color",
        "shortTitle": "Update Org Color",
        "category": "Orgcolor"
      },
      {
        "command": "orgcolor.syncDefaultColors",
        "title": "Sync Default Colors",
        "shortTitle": "Sync Default Colors",
        "category": "Orgcolor"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "extensionDependencies": [
    "salesforce.salesforcedx-vscode"
  ],
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^8.1.3",
    "typescript": "^4.4.4"
  }
}
