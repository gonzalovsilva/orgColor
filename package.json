{
  "name": "orgcolor",
  "displayName": "Org color indicator",
  "description": "Sets colors for each Salesforce org that you work with, updating it automatically when you switch orgs.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gonzalovsilva/orgColor"
  },
  "publisher": "gonzalovsilva",
  "author": {
    "name": "Gon√ßalo Silva"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "salesforce",
    "org",
    "color",
    "indicator",
    "sfdx",
    "cli"
  ],
  "activationEvents": [
    "workspaceContains:.sfdx/sfdx-config.json"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "OrgColor",
      "properties": {
        "orgcolor.setColorBars": {
          "order": 0,
          "type": "object",
          "scope": "resource",
          "markdownDescription": "Where do you want to set the color ?",
          "properties": {
            "statusBar": {
              "type": "boolean"
            },
            "activityBar": {
              "type": "boolean"
            },
            "titleBar": {
              "type": "boolean"
            }
          },
          "default": {
            "statusBar": true,
            "activityBar": true,
            "titleBar": true
          },
          "additionalProperties": false
        },
        "orgcolor.defaultOrgColors": {
          "type": "object",
          "scope": "resource",
          "properties": {
            "trailhead Org": {
              "type": "string",
              "description": "Color for Trailhead playground orgs"
            },
            "scratch Org": {
              "type": "string",
              "description": "Color for Scratch orgs"
            },
            "dev Org": {
              "type": "string",
              "description": "Color for Develloper orgs"
            },
            "uat Org": {
              "type": "string",
              "description": "Color for User Acceptance Testing orgs"
            },
            "preprod Org": {
              "type": "string",
              "description": "Color for Pre-production orgs"
            },
            "prod Org": {
              "type": "string",
              "description": "Color for Production orgs"
            }
          },
          "default": {
            "trailhead Org": "#99AEBB",
            "scratch Org": "#73D06F",
            "dev Org": "#574FB8",
            "uat Org": "#FFA01B",
            "preprod Org": "#E8476A",
            "prod Org": "#B52B0B"
          },
          "additionalProperties": {
            "type": "string",
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          }
        }
      }
    },
    "commands": [
      {
        "command": "orgcolor.setOrgColor",
        "title": "Set Org Color",
        "shortTitle": "Set Org Color",
        "category": "Orgcolor"
      },
      {
        "command": "orgcolor.updateOrgColor",
        "title": "Update Org Color",
        "shortTitle": "Update Org Color",
        "category": "Orgcolor"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "extensionDependencies": [
    "salesforce.salesforcedx-vscode"
  ],
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^8.1.3",
    "typescript": "^4.4.4"
  }
}
